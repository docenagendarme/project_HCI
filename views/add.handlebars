		</form>	
	

		<form id = "deleteEventForm" action="{{delete}}" style="display:inline"> 
			<input name="name" value="{{name}}" hidden readonly>
			</input>
			<input type="submit" id="deleteEvent" class="btn btn-default" value="Delete" style="width:80%"></input>
		</form>
		
		</div>
	</div>
</div>
