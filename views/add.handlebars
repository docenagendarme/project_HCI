	<div align="center">
		<div class="container"> 
		<form method="get" id="addEventForm" action="{{action}}">

			<h4>Event name:</h4>
			<input name="name" id="nameInput" value="{{name}}"></input>
			<input name="original" id="originalInput" value="{{name}}" hidden {{readonly}}></input>

			<h4>Importance:</h4>
                        <select name="importance" value="{{importance}}">
                                <option value="31">low(1 star)</option>
                                <option value="48">medium(2 Stars)</option>
                                <option value="65">high(3 Stars)</option>
                        </select>

			<div><h4></div>			

			<h4 style="display:inline">This is a happy event:</h4>
			<input type="checkbox" name="happy">

			<h4>Comments:</h4>
			<input name="comment" id="commentInput" value="{{comment}}"></input>	
			<h4>Date:</h4>
			<input type="date" id="dateInput" name="date" value="{{date}}"></input>
			<h4>Time:</h4>
			<input type="time" id="timeFromInput" name="timeFrom" value="{{timeFrom}}"></input>
			to
			<input type="time" id="timeFromTo" name="timeTo" value="{{timeTo}}"></input>
			<h4>Location:</h4>
			<input name="place" id="placeInput" value="{{place}}"></input>
		</br>

