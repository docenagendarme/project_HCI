		{{/each}}
		<br>
	</div>	
		<!--Check calendar-->
		<a href= "calendar">
		<div class = "calendar">
		 <center><img src="/images/calendar-icon.png" alt="ViewCalendar" style = "width:40px;height:40px;">
		 <br>
		 Calendar</center>
		</div>
		<a>

		<div><button id="create"><h4>Create Event</h4></button></div>
		<br>
		<div style="height:20%">
		<form method="get" action="/addEvent">
			<input id="qrBox" name="name" placeholder="Type to Add Quick Reminder"></input>
			<input id="qrButton" type="submit" value="OK"></input>
		</form></div>

		<div><h3>
		</h3></div>

		<div>

	</div>

	<script src="https://code.jquery.com/jquery.js"></script>
	<script src="/js/bootstrap.min.js"></script>
	<script>
		$("#create").click(function(){
			window.open("add", "_self", "null")
		});
	</script>

</body>
